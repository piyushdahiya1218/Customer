<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_unselected"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/productimage"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/productnameeng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="eng name"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/productimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productnamehindi"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="hindi name"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/productimage"
        app:layout_constraintTop_toBottomOf="@+id/productnameeng" />

    <TextView
        android:id="@+id/productquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="q"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/quantityadd"
        app:layout_constraintStart_toEndOf="@+id/quantitysub"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quantityadd"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_text_border"
        android:gravity="center"
        android:text="+"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/productprice2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quantitysub"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_border"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/quantityadd"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addbutton"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border_add"
        android:gravity="center"
        android:text="Add"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/quantityadd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/quantitysub"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:text="p"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productprice2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="5dp"
        android:text="Rs."
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/productprice"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>